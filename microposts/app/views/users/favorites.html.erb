  <ul class="media-list">
    <% @favorites.each do |favorite| %>
      <li class="media">
        <div class="media-left">
          <img class="media-object img-rounded" src="<%= gravatar_url(@user, { size: 50 }) %>" alt="">
        </div>
        <div class="media-body">
          <div>
            <%= @user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(@user) %></p>
          </div>
          <div>
            <%= favorite.content %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate @favorites %>
